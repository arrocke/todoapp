{
  "name": "todoapp",
  "version": 2,
  "alias": ["todo.adrianrocke.com"],
  "builds": [
    {
      "src": "web/next.config.js",
      "use": "@now/next"
    },
    {
      "src": "api/index.ts",
      "use": "@now/node",
      "config": {
        "includeFiles": [
          "api/schema.graphql"
        ]
      }
    }
  ],
  "routes": [
    { "src": "^/api", "dest": "/api/index.ts" },
    { "src": "^/(.*)", "dest": "/web/$1", "continue": true }
  ],
  "env": {
    "MONGODB_URI": "@todo-mongodb-uri"
  }
}