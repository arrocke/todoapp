{
  "name": "todoapp-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/graphql": "^14.2.3",
    "@types/node": "12.7.1",
    "@typescript-eslint/eslint-plugin": "2.0.0",
    "@typescript-eslint/parser": "2.0.0",
    "eslint": "6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "graphql": "^14.4.2",
    "graphql-yoga": "^1.18.2",
    "nexus": "^0.12.0-beta.6",
    "nexus-prisma": "^0.3.7",
    "prettier": "^1.18.2",
    "prisma-client-lib": "^1.34.6",
    "typescript": "3.4.5"
  },
  "devDependencies": {
    "@types/jest": "24.0.17",
    "husky": "^3.0.3",
    "jest": "24.9.0",
    "jest-watch-typeahead": "^0.3.1",
    "lint-staged": "^9.2.1",
    "nodemon": "1.19.1",
    "ts-jest": "24.0.2",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.41"
  },
  "scripts": {
    "start": "ts-node index.ts",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly ./",
    "lint": "eslint src/**",
    "test": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix",
      "git add"
    ]
  }
}
