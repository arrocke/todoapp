{
  "name": "todoapp-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/node": "12.7.1",
    "@typescript-eslint/eslint-plugin": "2.0.0",
    "@typescript-eslint/parser": "2.0.0",
    "apollo-server": "2.8.1",
    "eslint": "6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "graphql": "14.4.2",
    "prettier": "^1.18.2",
    "typescript": "3.5.3"
  },
  "devDependencies": {
    "@types/jest": "24.0.17",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "jest": "24.9.0",
    "jest-watch-typeahead": "^0.3.1",
    "nodemon": "1.19.1",
    "ts-jest": "24.0.2"
  },
  "scripts": {
    "build": "npm run lint && tsc -p ./tsconfig.build.json",
    "start": "tsc -w -p ./tsconfig.build.json & sleep 3 && nodemon --inspect dist/server.js && kill %1",
    "serve": "node dist/server.js",
    "lint": "eslint src/**",
    "test": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix",
      "git add"
    ]
  }
}
